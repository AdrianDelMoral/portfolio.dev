---
import GitHub from "./icons/GitHub.astro"
import TailwindCSS from "./icons/Tailwind.astro"
import Css from "./icons/Css.astro"
import Html from "./icons/Html.astro"
import Angular from "./icons/Angular.astro"
import Node from "./icons/Node.astro"
import TypeScript from "./icons/TypeScript.astro"
import JavaScript from "./icons/JavaScript.astro"
import React from "./icons/React.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#565900] text-white",
    icon: JavaScript,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#000459] text-white",
    icon: TypeScript,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindCSS,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#005956] text-white",
    icon: Css,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#593700] text-white",
    icon: Html,
  },
  ANGULAR: {
    name: "ANGULAR",
    class: "bg-[#590000] text-white",
    icon: Angular,
  },
  NODEJS: {
    name: "NODEJS",
    class: "bg-[#355900] text-white",
    icon: Node,
  },
  REACT: {
    name: "REACT",
    class: "bg-[#001F59] text-white",
    icon: React,
  },
}
const PROJECTS = [
  {
    title: "Calculadora de Propinas",
    description:
      "Proyecto poniendo en práctica sobre localStorage, Buenas prácticas TypeScript + React y Tailwind",
    link: "https://tips-calculator-admm.netlify.app/",
    github: "https://github.com/AdrianDelMoral/calculadora_propinas_reactTS",
    image: "/projects/TipsCalculator.webp",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.TYPESCRIPT, TAGS.CSS],
  },
  {
    title: "GuitarLA",
    description:
      "Proyecto poniendo en práctica lo aprendido sobre Almacenamiento en LocalStorage, TypeScript + React y Buenas Prácticas",
    link: "https://guitarla-admm-typescript.netlify.app/",
    github: "https://github.com/AdrianDelMoral/guitarla_ts",
    image: "/projects/GuitarLaTs.webp",
    tags: [TAGS.TAILWIND, TAGS.TYPESCRIPT, TAGS.REACT],
  },
  {
    title: "Calorie Tracker",
    description:
      "Proyecto realizado para seguir el proceso de Cantidad de Calorias quemadas VS Cantidad de Calorias Consumidas",
    link: "https://app.netlify.com/sites/onepercentapp/overview",
    github: "https://github.com/AdrianDelMoral/calorie-tracker/blob/main/README.md",
    image: "/projects/CalorieTracker.webp",
    tags: [TAGS.TAILWIND, TAGS.TYPESCRIPT, TAGS.REACT],
  },
  {
    title: "One Percent App",
    description:
      "Proyecto realizado en Typescript y React en base a la página de un conocido que es entrenador personal y mejorar su Landing Page y marca personal",
    link: "https://onepercentapp.netlify.app/",
    github: "https://github.com/AdrianDelMoral/onepercent_landing_page",
    image: "/projects/onePercentApp.webp",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.TYPESCRIPT],
  },
  {
    title: "CryptoApp - Aplicación para cotizar las criptomonedas al momento",
    description:
      "Biblioteca de logos SVG de las marcas más populares. +10k visitas al mes. +2K svgs descargados. Creado desde cero con Next.js, React y Tailwind CSS.",
    link: "https://cotizar-criptos-admm.netlify.app/",
    github: "https://github.com/AdrianDelMoral/criptos_react",
    image: "/projects/CryptoApp.webp",
    tags: [TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: "Angular Login / Register",
    description:
      "Prueba técnica realizada en Angular y Node con validaciónes tanto en Frontend y Backend con Node y Angular",
    link: "https://usersapp-quasar.netlify.app/",
    github: "https://github.com/AdrianDelMoral/angular-auth",
    image: "/projects/LoginRegister.webp",
    tags: [TAGS.CSS, TAGS.HTML, TAGS.ANGULAR, TAGS.NODEJS],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



